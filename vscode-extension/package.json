{
  "name": "unison-format",
  "displayName": "Unison Formatter",
  "description": "Format Unison source files using a lossless parser",
  "version": "0.0.5",
  "publisher": "kubukoz",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kubukoz/unison-fmt"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:unison"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Unison Formatter",
      "properties": {
        "unison-format.cliPath": {
          "type": "string",
          "default": "",
          "description": "Path to the unison-fmt CLI binary. If set, the extension uses the CLI instead of the built-in WebAssembly formatter."
        },
        "unison-format.indentWidth": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 8,
          "description": "Number of spaces per indentation level."
        },
        "unison-format.maxLineWidth": {
          "type": "number",
          "default": 100,
          "minimum": 40,
          "maximum": 200,
          "description": "Maximum line width before breaking long lines."
        }
      }
    }
  },
  "extensionDependencies": [
    "unison-lang.unison"
  ],
  "dependencies": {}
}
